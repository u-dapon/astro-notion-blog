---
import type { Post } from '../lib/interfaces'
import { getNavLink, getPostLink } from '../lib/blog-helpers'
import PostTags from './PostTags.astro'

export interface Props {
  prevPost: Post
  nextPost: Post
}

const { prevPost, nextPost } = Astro.props
---

<div class="post-relative-link">
  <div>
    {
      prevPost && (
        <a href={getPostLink(prevPost.Slug)} class="prev-post">
          <div>◀︎ 前の記事</div>
          <div>{prevPost.Title}</div>
        </a>
      )
    }
  </div>
  <div>
    {
      nextPost && (
        <a href={getPostLink(nextPost.Slug)} class="next-post">
          <div>次の記事 ▶︎</div>
          <div>{nextPost.Title}</div>
        </a>
      )
    }
  </div>
</div>

<style>
  div.post-relative-link {
    margin-top: 1rem;
    display: flex;
    gap: 10px;
  }

  div.post-relative-link > div {
    width: calc(50% - 5px);
    display: block;
    margin-top: 0.6rem;
  }

  div.post-relative-link > div > a {
    display: flex;
    flex-direction: column;
    line-height: 1.7;
    font-size: 0.8rem;
    padding: 1rem;
    border-radius: var(--radius);
    color: var(--fg);
    border: 1px solid var(--fg);
    transition: 0.2s all;
    height: 100%;
  }

  div.post-relative-link > div > a:hover,
  div.post-relative-link > div > a:active {
    background-color: var(--fg);
    color: white;
  }

  /* 次の記事　前の記事 */
  div.post-relative-link > div > a > div:first-child {
    width: auto;
    text-align: left;
    font-size: 0.85rem;
  }

  /* タイトル */
  div.post-relative-link > div > a > div:nth-child(2) {
    width: auto;
    padding: 0.2rem 0 0.4rem;
    text-align: left;
    font-size: 0.9rem;
    font-weight: bold;
  }

  .next-post {
    align-items: end;
    height: 100%;
  }
</style>
