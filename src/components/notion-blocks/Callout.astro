---
import * as interfaces from '../../lib/interfaces.ts'
import { snakeToKebab } from '../../lib/style-helpers.ts'
import RichText from './RichText.astro'
import NotionBlocks from '../NotionBlocks.astro'

export interface Props {
  block: interfaces.Block
  headings: interfaces.Block[]
}

const { block, headings } = Astro.props
---

<div class={`callout ${snakeToKebab(block.Callout.Color)}`}>
  <div>
    {
      block.Callout.Icon.Type === 'emoji' ? (
        block.Callout.Icon.Emoji
      ) : block.Callout.Icon.Type === 'external' ? (
        <img src={block.Callout.Icon.Url} />
      ) : null
    }
  </div>
  <div>
    {
      block.Callout.RichTexts.map((richText: interfaces.RichText) => (
        <RichText richText={richText} />
      ))
    }
    {
      block.Callout.Children && (
        <NotionBlocks blocks={block.Callout.Children} headings={headings} />
      )
    }
  </div>
</div>

<style>
  .callout {
    display: flex;
    margin: 2rem auto;
    padding: 24px ;
    width: 100%;
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.6rem;
    border-radius: 3px;
    border-width: 1px;
    border-style: solid;
    border-color: rgba(235, 236, 237, 0.3);
    background: #f9f9fa;
  }
  .callout div {
    margin: 0;
    line-height: 1.5rem;
    font-size: 0.9rem;
  }
  .callout div:first-child {
    margin-right: 0.7rem;
    font-size: 1.3rem;
  }
  .callout div:first-child img {
    width: 1.2rem;
    height: 1.2rem;
  }
</style>


<style>
  .callout.green-background {
      background: none !important;
      padding: 0px !important;
      align-items: center;
      border: none !important;
  }
  .callout.green-background div:first-child img {
    width: 40px;
    height: 40px;
    border-radius: 100px;
  }

  .callout.green-background div:nth-child(2) {
    margin: 0px;
    border: 1px solid #ddd;
    padding: 20px;
    border-radius: 6px;
    margin-left: 0px;
    font-size: 0.9rem;
  }
</style>